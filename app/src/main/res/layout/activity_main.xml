<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="Droid Desserts"
        android:textSize="28sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        android:text="Choose a dessert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="619dp"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/boton1"
                android:layout_width="wrap_content"
                android:layout_height="130sp"
                android:layout_weight="1"
                android:src="@drawable/donut_circle"
                android:onClick="seleccionarActividad"
                android:layout_marginLeft="20sp"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Donuts are glazed and sprinkled with candy."
                android:layout_marginLeft="20sp"
                android:layout_marginTop="40sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/boton2"
                android:layout_width="wrap_content"
                android:layout_height="130sp"
                android:layout_weight="1"
                android:src="@drawable/icecream_circle"
                android:onClick="seleccionarActividad"
                android:layout_marginLeft="20sp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ice cream sandwiches have chocolate wafers and vanilla  filling."
                android:layout_marginLeft="20sp"
                android:layout_marginTop="40sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/boton3"
                android:layout_width="wrap_content"
                android:layout_height="130sp"
                android:layout_weight="1"
                android:src="@drawable/froyo_circle"
                android:onClick="seleccionarActividad"
                android:layout_marginLeft="20sp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Floyo is sensitive frozen yogurt."
                android:layout_marginLeft="20sp"
                android:layout_marginTop="40sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>